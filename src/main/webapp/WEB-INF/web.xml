<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateStudent</servlet-name>
        <servlet-class>controller.student.CreateStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateStudent</servlet-name>
        <url-pattern>/students/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListStudent</servlet-name>
        <servlet-class>controller.student.ListStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListStudent</servlet-name>
        <url-pattern>/students/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>controller.student.DeleteStudent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/students/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetListProductServlet</servlet-name>
        <servlet-class>controller.product.GetListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListProductServlet</servlet-name>
        <url-pattern>/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>controller.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>controller.product.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/products/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>controller.product.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/products/detail</url-pattern>
    </servlet-mapping>
</web-app>